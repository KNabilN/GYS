<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".LanguageActivity"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        tools:context=".LanguageActivity">

        <TextView
            android:id="@+id/txt_lang_sel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="اختيار اللغة"
            android:textColor="#610CB1"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView

            android:layout_below="@id/txt_lang_sel"
            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ques" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="8dp"
            android:background="#610CB1" />


        <ImageView
            android:src="@drawable/ques"
            android:id="@+id/sign_language_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Sign Language"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:id="@+id/sign_language_layout"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ques"
                android:visibility="gone"/>
            <Button
                android:onClick="next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:text="Next"
                android:background="@drawable/button"
                android:textColor="#ffffff"/>
        </LinearLayout>


        <TextView
            android:id="@+id/ar_language_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="اللغة العربية"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            android:textSize="24sp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/ar_language_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@drawable/back">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="أنت الآن على وشك اختيار اللغة العربية والتي تتضمن تسجيلات باللغة العربية ونصوص مكتوبة لكل أثر موجود للتأكيد بالرجاء الضغط على زر التالي."
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:padding="8dp"
                />
            <Button
                android:onClick="next"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:text="التالي"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@color/fui_transparent"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <TextView
            android:id="@+id/en_language_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="English"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/en_language_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@drawable/back">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are about to choose English language. This includes records and texts. Please, click on Next to confirm."
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:padding="8dp"
                />
            <Button
                android:onClick="next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:text="Next"
                android:textSize="18sp"
                android:background="@color/fui_transparent"
                android:textColor="#ffffff"/>
        </LinearLayout>


        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="8dp"
            android:background="#610CB1"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>

